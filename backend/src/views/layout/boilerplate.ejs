        <style>
        .course-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .course-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .course-card-mandatory {
            background-color: #f8f9fa;
            cursor: default;
        }
        .course-card-mandatory:hover {
            transform: none;
        }
        .radio-card {
            position: relative;
        }
        .radio-card input[type="radio"] {
            width: 24px;
            height: 24px;
        }
        .radio-card input[type="radio"]:checked ~ .card {
            border-color: #0d6efd;
            background-color: #e7f3ff;
        }
        .checkmark-icon {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background-color: #0d6efd;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .sticky-header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: white;
            border-bottom: 1px solid #dee2e6;
        }
        .card {
            /* Add a subtle shadow and border */
            border: 1px solid #e9ecef;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.04);
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }

        .card:hover {
            /* Add a slightly stronger shadow and lift on hover */
            transform: translateY(-3px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.08);
        }

        .card-title {
            font-weight: 600;
            color: #212529;
        }

        .qualification-header {
            font-size: 0.9rem;
            font-weight: 600;
            color: #495057;
            margin-top: 1rem;
            margin-bottom: 0.5rem;
        }
        
        .list-group-item {
            padding-left: 0;
            padding-right: 0;
            border-color: #f1f3f5;
        }
    </style>
