<% layout('layout/boilerplate.ejs')%>
<header class="py-3 bg-white shadow-sm border-bottom">
    <div class="container text-center">
        <h1 class="display-6 fw-bold">Faculty Directory</h1>
        <p class="text-muted mb-0">Meet our distinguished faculty members.</p>
    </div>
</header>
<main class="py-5">
        <div class="container">
            <div class="row">

                <!-- Faculty Card 1: Dr. Priya Sharma -->
                 <% for( let faculty of faculties) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm rounded-3">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= faculty.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= faculty.email %></h6>
                            
                            <p class="qualification-header">Qualifications</p>
                            <ul class="list-group list-group-flush flex-grow-1">
                                <% for(let education of faculty.qualification) { %>
                                <li class="list-group-item">
                                    <strong><%= education.degree %></strong>
                                </li>
                                <% } %>
                            </ul>
                           <p class="text-muted small mb-2 text-center">Scan to see more details or click the button</p>
                              <div class="mt-auto pt-3 d-flex justify-content-between align-items-center">
                                <!-- User will replace src with their actual PNG path -->
                                <img src="<%= faculty.faculty_qr %>" 
                                     alt="QR Code for Mr. Vikram Reddy"
                                     style="width: 80px; height: 80px; border-radius: 8px;"
                                     >
                                
                                <!-- This would link to a detail page. -->
                                <a href="faculty/<%= faculty.facultyId %>" class="btn btn-primary">
                                    View Full Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Faculty Card 2: Prof. Rajesh Kumar -->
               <% } %>

                <!-- Add more faculty cards here by copying the structure -->

            </div>
        </div>
    </main>